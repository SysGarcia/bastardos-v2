<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Bastardos 🚬</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      @font-face {
        font-family: 'StreetSoul';
        src: url('public/fonts/StreetSoul.woff2') format('woff2');
      }
      @font-face {
        font-family: 'RokiestRegular';
        src: url('public/fonts/RokiestRegular.woff2') format('woff2');
      }

      /* Estilos adicionales para ocultar elementos en pantallas pequeñas */
      @media (max-width: 850px) {
        .nav-items {
          display: none; /* Oculta los elementos de navegación */
        }
        .nav-icon {
          display: flex; /* Muestra el icono */
        }
        .only-logo {
          display: flex; /* Muestra solo el logo */
        }
      }

      .background {
        background-image:
        linear-gradient(to top, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.3)), 
        linear-gradient(135deg, rgba(0, 0, 0, 0.1), 
        rgba(0, 0, 0, 0.1)), url('/assets/DSC00361.jpg');
        width: 100%;
        height: 100vh; /* Establece la altura para llenar la ventana */
        background-size: cover; /* Asegura que la imagen cubra todo el fondo */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        background-position: right center; /* Ajusta la posición de la imagen en el fondo a la derecha y centrada verticalmente */
        display: flex; /* Habilita el uso de Flexbox */
        flex-direction: column; /* Dispone el contenido verticalmente */
        min-height: 650px;
        max-height: 100%;
      }

      @media (max-width: 780px) {
        .background {
          background-image:
            linear-gradient(to top, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.3)),
            /* Degradado de abajo hacia arriba */ linear-gradient(135deg, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)),
            /* Degradado desde 135 grados */ url('/assets/DSC00361.jpg'); /* Imagen de fondo */

          background-size: cover, cover, cover; /* Asegura que los gradientes y la imagen cubran todo */
          background-repeat: no-repeat; /* Evita que la imagen se repita */

          /* Ajusta la posición del fondo en pantallas pequeñas */
          background-position:
            calc(100%) center,
            calc(100%) center,
            calc(100% + 300px) center;

          width: 100%;
          height: 100vh; /* Establece la altura para llenar la ventana */
          display: flex; /* Habilita el uso de Flexbox */
          flex-direction: column; /* Dispone el contenido verticalmente */
          min-height: 650px;
          max-height: 100%;
        }
      }

      .underline-link {
        position: relative; /* Para posicionar el pseudo-elemento */
        color: inherit; /* Hereda el color del texto */
        text-decoration: none; /* Elimina el subrayado original */
      }

      .underline-link::after {
        content: ''; /* Necesario para que el pseudo-elemento aparezca */
        position: absolute; /* Posiciona el pseudo-elemento */
        left: 0; /* Alineado a la izquierda */
        bottom: 0; /* Alineado al fondo del texto */
        height: 2px; /* Altura del subrayado */
        width: 100%; /* Ancho del subrayado igual al texto */
        background-color: currentColor; /* Usa el color del texto */
        transform: scaleX(0); /* Comienza desde un 0% en escala */
        transition: transform 0.5s ease; /* Duración de la transición */
      }

      .underline-link:hover::after {
        transform: scaleX(1); /* Escala a 100% cuando se pasa el cursor */
      }

      #paragraph {
        min-height: 600px;
      }

      @media (max-width: 1100px) {
        #paragraph {
          min-height: 0px;
        }
      }
    </style>
  </head>


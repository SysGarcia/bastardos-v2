          <div class="only-logo">
            <h1 class="text-5xl text-white font-StreetSoul">
              <a href="#">B</a>
            </h1>
          </div>
          <div class="flex items-center">
            <ul class="hidden md:flex justify-center items-center space-x-10 tracking-widest nav-items">
              <li><a href="#" class="underline-link">Recepción</a></li>
              <li><a href="#" class="underline-link">Personajes</a></li>
              <li><a href="#" class="underline-link">Créditos</a></li>
              <li><a href="#" class="underline-link">Contacto</a></li>
              <li>
                <a href="#" class="blood-effect transition-colors duration-300 bg-[#d82323] p-2 px-3 rounded-md">Ver Ahora</a>
              </li>
            </ul>
    
            <!-- Botón que despliega el menú en móvil -->
            <div class="nav-icon md:hidden" id="menu-toggle">
              <ul class="flex justify-center items-center space-x-5 tracking-widest">
                <li>
                  <a href="#" class="blood-effect transition-colors duration-300 bg-[#d82323] p-2 px-3 rounded-md">Ver Ahora</a>
                </li>
              <li>
                <button class="flex justify-center items-center" onclick="toggleSideMenu()">
                <svg style="transform: scaleX(-1);" class="w-7 h-7" viewBox="0 0 24 24" fill="#fff" xmlns="http://www.w3.org/2000/svg">
